<Window x:Class="Demo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Sistema de Reconocimiento Facial MFace v0" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Área de imágenes -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Imagen de referencia -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Imagen de Referencia" 
                           FontSize="16" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border BorderBrush="Gray" BorderThickness="2" 
                        Height="250" Width="200">
                    <Image x:Name="ReferenceImage" Stretch="Uniform"/>
                </Border>
            </StackPanel>

            <!-- Imagen capturada -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Imagen Capturada" 
                           FontSize="16" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border BorderBrush="Gray" BorderThickness="2" 
                        Height="250" Width="200">
                    <Image x:Name="CapturedImage" Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Resultado -->
        <Border Grid.Row="2" Margin="0,20,0,10" 
                Padding="15" CornerRadius="5"
                x:Name="ResultBorder" Background="LightGray">
            <StackPanel>
                <TextBlock x:Name="ResultText" 
                           Text="Esperando captura..." 
                           FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="ScoreText" 
                           Text="" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Controles -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="InitButton" Content="Inicializar MFace" 
                    Width="150" Height="40" Margin="5"
                    Click="InitButton_Click"/>
            <Button x:Name="CaptureButton" Content="Capturar y Comparar" 
                    Width="150" Height="40" Margin="5"
                    Click="CaptureButton_Click" IsEnabled="False"/>
            <Button x:Name="CloseButton" Content="Cerrar" 
                    Width="100" Height="40" Margin="5"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Overlay de carga -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="4" 
              Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Procesando..." 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" Height="20" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
